<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.joshhendo.numbersearch"
          android:versionCode="10"
          android:versionName="0.7.2">
    <application android:label="@string/app_name" android:icon="@drawable/logo">

        <activity android:name=".views.ViewResidentialList"
                android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity android:name=".views.ViewBusinessList"
                android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity android:name=".SearchResidential"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity android:name=".views.ViewPastSearchesResidential"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity android:name=".SearchBusiness"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".SearchGovernment"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".views.ViewResidentialEntry"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".views.ViewBusinessEntry"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".views.ViewGovernmentList"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".Welcome"
                android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <supports-screens android:resizeable="true"
                      android:smallScreens="true"
                      android:normalScreens="true"
                      android:largeScreens="true"
                      android:anyDensity="true" />

    <uses-sdk android:minSdkVersion="5"/>
    
</manifest> 
